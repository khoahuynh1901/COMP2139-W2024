@model IEnumerable<GBC_Travel_Group53.Models.Domain.Person>

@{

}

<div class="mt-5" style="width:100%">
    <div class="row">
        <h2>Your Summary</h2>
        <div class="col-md-4">
            <a href="/Customers/Bookings" class="btn btn-primary">Bookings</a>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Passport Number</th>
                <th>Phone</th>
                <th>Destination</th>
                <th>Check In</th>
                <th>Check Out</th>
                <th>Rooms</th>
                <th>Adults</th>
                <th>Children</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Email</td>
                    <td>@person.PassportNumber</td>
                    <td>@person.Phone</td>
                    <td>@person.Destination</td>
                    <td>@person.CheckIn</td>
                    <td>@person.CheckOut</td>
                    <td>@person.Rooms</td>
                    <td>@person.Adults</td>
                    <td>@person.Children</td>
                    <td>
                        <a class ="btn btn-sm btn-primary">Edit</a>
                        <a class ="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
