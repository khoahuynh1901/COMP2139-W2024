@{
}
@model Week04.Models.Entities.Courses
<h1>Edit Courses</h1>

@if (Model is null)
{

    <p> No Course was found with this ID</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label for="NameCourse">Id</label>
            <input type="text" class="form-control" id="NameCourse" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label for="CourseCode">Code</label>
            <input type="email" class="form-control" id="CourseCode" asp-for="Code" />
        </div>

        <div class="mt-3">
            <label for="CourseSemester">Semester</label>
            <input type="text" class="form-control" id="CourseSemester" asp-for = "Semester" />
        </div>

        <div class="mt-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribe" />
                <label class="form-check-label" for="Subscribed">Subscribed</label>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Courses">Delete</button>
        </div>

    </form>

}
